<?xml version='1.0' encoding='utf-8' ?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="@color/colorBackgroundNavigation"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="48.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/menu_show_ignored_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_list" />

                    <TextView
                        android:id="@+id/tv_show_ignored_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/show_ignored_list"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip">

                    <ImageView
                        android:id="@+id/img_quiet_notification"
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_autoscan" />

                    <TextView
                        android:id="@+id/tv_auto_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:layout_toRightOf="@+id/img_quiet_notification"
                        android:text="@string/auto_scan"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />

                    <ToggleButton
                        android:id="@+id/toggle_auto_scan"
                        android:layout_width="45.0dip"
                        android:layout_height="24.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_thumb"
                        android:textOff="@null"
                        android:textOn="@null" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/menu_app_lock"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_lockappmenu" />

                    <TextView
                        android:id="@+id/tv_app_lock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/app_lock"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_phone_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_ihoneinfo_menu" />

                    <TextView
                        android:id="@+id/tv_phone_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/phone_info"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_feedback_menu" />

                    <TextView
                        android:id="@+id/tv_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/feedback"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_rate_us"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_rateus" />

                    <TextView
                        android:id="@+id/tv_rate_us"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/rate_us"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/menu_more_app"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16.0dip"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36.0dip"
                        android:layout_height="36.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_moreapp" />

                    <TextView
                        android:id="@+id/tv_more_app"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8.0dip"
                        android:text="@string/more_app"
                        android:textColor="@color/colorTextMenu"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="8.0dip"
                android:layout_marginLeft="8.0dip"
                android:textColor="@color/colorTextMenu"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
